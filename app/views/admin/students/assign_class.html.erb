      <%= f.select :batch_id, options_for_select([["Select", ""]] + Batch.all.map{|ic| [ic.batch_name,ic.id]}), :onchange => "GetSubjects(this.value)", :class => "form-control" %>
<%#= select_tag :batch_id,  options_for_select([["Select", ""]] + Batch.where("admin_id=?",current_admin.id).map{|ic| [ic.batch_name,ic.id]}), :onchange => "GetSubjects(this.value)" %>
    </p>
  </div>
